<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardStyleSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Indicador de posición/medalla -->
        <ImageView
            android:id="@+id/iv_rank_medal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_medal_gold"
            android:contentDescription="@string/rank_position"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Número de posición -->
        <TextView
            android:id="@+id/tv_rank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/iv_rank_medal"
            app:layout_constraintBottom_toBottomOf="@id/iv_rank_medal"
            app:layout_constraintStart_toStartOf="@id/iv_rank_medal"
            app:layout_constraintEnd_toEndOf="@id/iv_rank_medal"
            tools:text="#1" />

        <!-- Información del jugador -->
        <LinearLayout
            android:id="@+id/ll_player_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_rank_medal"
            app:layout_constraintEnd_toStartOf="@id/ll_stats"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Nombre del jugador -->
            <TextView
                android:id="@+id/tv_player_name"
                style="@style/RankingItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Jugador123" />

            <!-- Dificultad -->
            <TextView
                android:id="@+id/tv_difficulty"
                style="@style/RankingSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="Dificultad: 4x4" />

        </LinearLayout>

        <!-- Estadísticas -->
        <LinearLayout
            android:id="@+id/ll_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Puntuación -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/button_warning"
                    tools:text="2500" />

            </LinearLayout>

            <!-- Tiempo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_timer"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/RankingSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="2:34" />

            </LinearLayout>

            <!-- Movimientos -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_moves"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_moves"
                    style="@style/RankingSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="45 movimientos" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
