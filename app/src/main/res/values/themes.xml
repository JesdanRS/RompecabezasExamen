<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base de la aplicación -->
    <style name="Base.Theme.RompecabezasExamen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/primary_purple_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/text_white</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Colores de error -->
        <item name="colorError">@color/button_error</item>
        <item name="colorOnError">@color/text_white</item>
        
        <!-- Configuración de la barra de estado -->
        <item name="android:statusBarColor">@color/primary_purple</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Configuración de la barra de navegación -->
        <item name="android:navigationBarColor">@color/primary_purple</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.RompecabezasExamen" parent="Base.Theme.RompecabezasExamen" />
    
    <!-- Estilos de botones -->
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
    
    <style name="ButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_purple</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
    
    <style name="ButtonSmall" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    
    <!-- Estilos de texto -->
    <style name="TextHeading1">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="TextHeading2">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="TextSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <style name="TextBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="TextCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Estilos de cards -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
    </style>
    
    <style name="CardStyleSmall" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
    </style>
    
    <!-- Estilos de input -->
    <style name="InputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="boxStrokeColor">@color/primary_purple</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
    
    <!-- Estilos del juego -->
    <style name="GameStatsText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="GameStatsLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:alpha">0.8</item>
    </style>
    
    <!-- Estilos del ranking -->
    <style name="RankingItemText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="RankingSubText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Estilos de diálogos -->
    <style name="DialogStyle" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
</resources>